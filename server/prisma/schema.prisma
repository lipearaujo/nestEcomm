generator client {
  provider = "prisma-client"
  //output   = "../generated/prisma"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mongodb"
}

model User {
  id             String     @id @default(uuid()) @map("_id")
  name           String
  email          String     @unique
  password       String
  purchasedItems Products[]
}

model Products {
  id            String  @id @default(uuid()) @map("_id")
  name          String
  description   String
  category      String
  price         Float
  stockQuantity Int?    @default(10)
  imageURL      String
  User          User?   @relation(fields: [userId], references: [id])
  userId        String?
}
